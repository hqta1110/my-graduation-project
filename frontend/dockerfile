# ---------- STAGE 1: Build frontend ----------
FROM node:20-alpine AS builder

WORKDIR /app

# Cài dependencies trước (caching tốt hơn)
COPY package*.json ./
RUN npm install

# Copy toàn bộ mã nguồn & build
COPY . .
RUN npm run build  # Tạo thư mục build (React: build/, Vue: dist/)

# ---------- STAGE 2: Serve với Nginx ----------
FROM nginx:stable-alpine

# Copy build output từ stage 1
COPY --from=builder /app/build /usr/share/nginx/html

# Copy cấu hình nginx tùy chỉnh nếu cần (nếu không có file này, có thể bỏ dòng dưới)
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 9697

# Start nginx
CMD ["nginx", "-g", "daemon off;"]
